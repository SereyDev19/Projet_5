{% extends 'layout.html.twig' %}

{% block links %}
{% endblock %}

{% block content %}
    <header class="row col-sm-12">
        <div>
            <a class="text-white" href="index.php"><img id="logo" alt="logo" src="images/LOGOreportmeWHITE.png"></a>
        </div>
        <div class="page-header">
            <h1>Profil</h1>
        </div>
        <div>
            <div class="btn-group dropdown">
                <button type="button" id="username" class="user btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    {{ user_name }}
                </button>
                <div class="dropdown-menu">
                    {% if userSession.levelAccess !=0 %}
                        <a class="dropdown-item" href="admin.php?action=manageAccess">
                            Gérer les accès
                        </a>
                    {% endif %}
                    <a class="dropdown-item" href="admin.php?action=globalreport">
                        Tableau de bord
                    </a>
                    <a class="dropdown-item" href="admin.php?action=profile">
                        Profil
                    </a>
                    <a class="dropdown-item" href="admin.php?action=logout">
                        <i class="fas fa-power-off"></i> Déconnexion
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div id="container" class="profile">
        <div class="row col-sm-12">
            <a class="text-white" href="index.php"><i class="fas fa-arrow-left"></i>Retour vers l'accueil</a>
        </div>
        <div class="myprofile">
            <div class="row flex-wrap col-md-8 col-lg-8 col-xl-8 align-items-center justify-content-around">
                <img src="uploads/{{ user_id }}/{{ file }}" class="oval" style="width:200px;height: auto"/>
                <p class="username font-weight-bold">{{ user_name }}</p>
                <p class="useremail font-weight-bold">{{ user_email }}</p>
            </div>


            <div class="col-xl-6">
                <!-- Button trigger modal -->
                <button type="button" class="offset-4 btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                    Modifier
                </button>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalCenterTitle">Sélectionner une image</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <div class="modal-body">
                            <form action="admin.php?action=upload&amp;userid={{ user_id }}" method="post"
                                  enctype="multipart/form-data">
                                <input type="file" name="fileToUpload" id="fileToUpload" required>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                    <input type="submit" class="btn btn-primary" value="UploadImage" name="submit">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}