{% extends 'layout.html.twig' %}

{% block links %}
    <link href="css/styles-connexion.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="row col-sm-12">
        <a class="text-white" href="index.php"><img id="logo" alt="logo" src="images/LOGOreportmeWHITE.png"></a>
    </div>
    <div id="container">
        <div class="row col-sm-12">
            <a class="text-white" href="index.php"><i class="fas fa-arrow-left"></i>Retour vers l'accueil</a>
        </div>
        <form action="admin.php?action=CreateAccount" method="POST">
            <div class="logo">
                <img id="logo" alt="logo" src="images/LOGOreportme.png">
            </div>
            <h1>Inscription</h1>

            <div class="step row" id="step1">
                <label for="access_id"><b>Identifiant</b></label>
                <input id="access_id" type="number" placeholder="Identifiant" name="access_id" required>
                <label for="access_email"><b>E-mail</b></label>
                <input id="access_email" type="email" placeholder="E-mail" name="access_email" required>
            </div>
            {#            <div id="NextStep">Suivant</div>#}
            <div class="step row d-flex justify-content-around" id="step2">
                <div class="col-xl-6 pl-0">
                    <label for="name"><b>Nom</b></label>
                    <input type="text" placeholder="Nom" name="access_name" id="name" required>
                </div>
                <div class="col-xl-6 pr-0"><label for="firstname"><b>Prénom</b></label>
                    <input type="text" placeholder="Prénom" name="access_firstname" id="firstname"
                           required></div>
            </div>

            <div class="step" id="step3">
                <label for="password"><b>Mot de passe</b></label>
                <input type="password" placeholder="Définir le mot de passe" name="access_password" id="password"
                       required>
                <label for="confirm_password"><b>Confirmer le mot de passe</b></label>
                <input type="password" placeholder="Confirmer le mot de passe" name="confirm_password"
                       id="confirm_password" required>

                <input type="submit" id='submit' name='signIn' value='Inscription'>
            </div>
        </form>
    </div>
{% endblock %}


